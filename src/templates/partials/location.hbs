{{#each features}}
  <div class="location xs-border-bottom xs-pb4">
    <div class="flex xs-flex-justify-between xs-flex-align-start xs-pt4">
      <div class="xs-flex-auto">
        <h2 class="xs-mt0 xs-mb05 slab bold">{{this.properties.name}}</h2>
        {{#if this.properties.subhead}}<h4 class="xs-mt05 xs-mb0 bold">{{this.properties.subhead}}</h3>{{/if}}
      </div>
      <p class="distance xs-flex-auto xs-my0 xs-text-right bold">{{this.properties.distanceString}}</p>
    </div>

    <figure class="xs-mt2">
      <img src="http://placekitten.com/600/400" alt="" class="xs-full-width"/>
    </figure>

    <div class="clearfix xs-my2">
      <p class="col xs-col-12 sm-col-7">{{this.properties.description}}</p>
      <a href="{{this.directionsLink}}" class="button button--orange col xs-col-12 sm-col-4 sm-offset-1 bold">Take me there</a>
    </div>

  </div>
{{/each}}
